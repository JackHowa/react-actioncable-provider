{
  "name": "@thrash-industries/react-actioncable-provider",
  "version": "3.0.3",
  "description": "ActionCable Provider for React",
  "main": "dist/index.js",
  "exports": {
    "import": "./dist/modern/index.js"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "BROWSERSLIST_ENV='legacy' babel lib/index.js --out-dir dist/",
    "build:esm": "BROWSERSLIST_ENV='esm' babel lib/index.js --out-dir dist/esm",
    "build:webpack:esm": "webpack --config webpack.config.js",
    "build:webpack:legacy": "webpack --config legacy.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackHowa/react-actioncable-provider"
  },
  "keywords": [
    "ActionCable",
    "react",
    "Rails",
    "WebSockets"
  ],
  "files": [
    "dist/index.js",
    "dist/modern/index.js"
  ],
  "author": "Li Jie <cpunion@gmail.com>",
  "contributors": [
    "Jack Howard <jackhowaa@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JackHowa/react-actioncable-provider/issues"
  },
  "homepage": "https://github.com/JackHowa/react-actioncable-provider",
  "dependencies": {
    "actioncable": "^5.0.0",
    "create-react-class": "^15.6.2",
    "prop-types": "^15.6.0",
    "react": "^16.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@skypack/package-check": "^0.2.2",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chai": "^4.1.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^26.6.3",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.9.0",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx}"
    ],
    "coverageDirectory": "coverage",
    "setupFiles": [
      "<rootDir>/config/setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ]
  },
  "directories": {
    "lib": "lib"
  }
}